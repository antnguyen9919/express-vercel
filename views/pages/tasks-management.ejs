<!DOCTYPE html>
<html lang="en">

<head>

  <title>Task management</title>
  <%- include('../partials/headstyle.ejs'); -%>
</head>

<body>
  <%- include('../partials/navbar.ejs'); -%>
  <main id="task-page">
    <div class="row mt-3">
      <div class="col-md-3 mx-auto">
        <div class="card">
          <div class="card-header">
            <h1 class="text-center mb-3">Summary</h1>
          </div>
          <div class="card-body">

            <div class="card-text">
              Remaining tasks: 0
            </div>
            <div class="card-text">
              Completed tasks: 0
            </div>




          </div>
        </div>
      </div>
      <div class="col-md-8 mx-auto">
        <div class="card">
          <div class="card-header">
            <h1 class="text-center mb-3"><i class="fas fa-tasks"></i>Tasks</h1>

          </div>
          <div class="card-body">
            <div class="mb-2">
              <form>
                <div class="input-group mb-3">
                  <input required id="new-task-input" name="new-task-input" type="text" class="rounded form-control border border-dark mx-1" placeholder="Task...">

                  <span id="basic-addon2"><button id="add-task-button" class="btn btn-success rounded" type="button">Add</button></span>
                </div>


              </form>
            </div>
            <div>
              <ul id="tasks-list" class="list-group list-group-flush">

              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
  <%- include('../partials/scripts.ejs'); -%>
</body>

</html>